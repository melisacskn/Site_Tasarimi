	</location>


	<location path="urunlerim.aspx">
		<system.web>
			<authorization>
				<allow roles="Admin"/>
				<deny users="*"/>
			</authorization>
		</system.web>
	</location>

	<location path="admindefault.aspx">
		<system.web>
			<authorization>
				<allow roles="Admin"/>
